<!DOCTYPE html>
<html>
<head>
    @* TITULO *@
    <title>badisco.online</title>
    @* META - PÁGINA *@
    <meta charset="UTF-8">
    <meta name=viewport content="width=device-width, initial-scale=1" />
    <meta name="description" content="código cores cabos metálicos" />
    <meta name="keywords" content="código cores cabos metálicos" />
    @* LINKS *@
    <link href="~/Imagens/Badisco-Online.ico" rel="shortcut icon" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Fredoka+One" rel="stylesheet">
    @* ESTILOS CSS *@
    @Styles.Render("~/Content/Index")
</head>
<body>
    @* MENU *@
    <div class="navbar navbar-inverse navbar-fixed-top cor-degrade-preto">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/Home/Index">
                    <img src="~/Imagens/Badisco-Online-Logo.png" alt="LOGO" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="~/Metalico/Cores"><span class="animated infinite bounceInLeft">&#10687;</span> CORES METÁLICO</a></li>
                </ul>
            </div>
        </div>
    </div>
    @* BODY *@
    @RenderBody()
    @* RODAPÉ *@
    @Html.Partial("~/Views/LayoutPadrao/_Rodape.cshtml")
    @* PROGRESS *@
    <div id="progress">
        <div><img src="~/Imagens/LoaderAzul.gif" alt="IMG CARREGAMENTO" /></div>
    </div>
</body>
@* SCRIPTS JS *@
@Scripts.Render("~/bundles/Index")
</html>
